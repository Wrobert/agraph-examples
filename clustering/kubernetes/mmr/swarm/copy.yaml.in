version: '3.5'

   
services:
  copy:
    image: DockerAccount/agrepl:latest
    deploy:
       mode: replicated
       replicas: 4
    tmpfs:
      - /tmp:size=1g
    networks:
       - replnet
    volumes:
      - type: tmpfs
        target: /dev/shm

networks:
   replnet:
      external: true




       



  
